{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-error" role="alert">{{ flashError }}</div>
    {% endfor %}
<style>
    .form-error-icon{
        background-color:red;
    }
</style>
    <div class="row">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center ">Register</h1>
            {{ form_start(registrationForm,{'attr':{'novalidate':'novalidate','class':'anrchi '}}) }}
        <div class="row mt-4">
           
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName,{
                        label:'Nom: *'
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName,{
                        label:'Prénom: *'
                    }) }}
                </div>
            
        </div>
        <div class="form-group mt-3">
        {{ form_row(registrationForm.email,{
            label:'Email: *',help:'person@gmail.com'
        }) }}
        </div>
        <div class="form-group mt-3">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe: *',errors:'Veillez saisir un mot de passe'
        }) }}
        </div>
        <div class="form-group mt-3">
        {{ form_row(registrationForm.agreeTerms,{
            label:'J\'accepte les conditions d\'utilisations.'
            }) }}
        </div>
        <button type="submit" class="btn col-12 btn-primary mt-5 mb-4" >Créer mon compte</button>
    {{ form_end(registrationForm) }}
        </div>
    
    <p class="text-center mt-4 text-muted"> Vous avez dejà un compte ? <a href="{{ path ('app_login')}}" class="text-decoration-none"> Se connecter </p> </a>
    </div>
{% endblock %}
